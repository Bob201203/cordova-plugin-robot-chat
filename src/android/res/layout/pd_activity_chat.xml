                <!--android:layout_marginBottom="4dp"-->
                <!--android:textSize="16sp"-->
                <!--android:textColor="@color/pd_button_text_light"-->
                <!--android:text="@string/pd_send"-->
                <!--android:background="@drawable/pd_input_send"-->
                <!--android:visibility="gone"-->
                <!--/>-->
        </LinearLayout>
        <GridLayout
            android:id="@+id/pd_plgin_back"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/pd_record_back"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pd_record_back"
        android:visibility="gone"
        >
        <ImageView
            android:id="@+id/pd_record_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="36dp"
            android:src="@drawable/pd_record_cancel"
            />
        <TextView
            android:id="@+id/pd_record_state"
            android:layout_width="160dp"
            android:layout_height="28dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:background="@color/pd_record_finish"
            android:textColor="@color/pd_record_text"
            android:textSize="14sp"
            android:gravity="center"
            />
    </RelativeLayout>
</RelativeLayout>
